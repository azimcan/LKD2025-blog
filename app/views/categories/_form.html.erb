<%= form_with model: category, class: "flex flex-col gap-4" do |form| %>
  <ul>
    <% category.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>

  <div class="flex flex-col gap-4">
    <div>
      <%= form.label :title %>
      <%= form.text_field :title, class: "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full" %>
    </div>

    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
<% end %>