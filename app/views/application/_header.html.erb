<header class="container flex justify-between mx-auto p-4">
  <h1 class="flex-1">Blog</h1>

  <nav class="flex gap-4">
    <% if authenticated? %>
      <%= link_to "Categories", categories_path, class: "underline hover:no-underline text-blue-500" %>
      <%= button_to "Logout", session_path, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "underline hover:no-underline text-red-500" %>
    <% else %>
      <%= link_to "Login", new_session_path, class: "underline hover:no-underline text-blue-500" %>
    <% end %>
  </nav>
</header>
