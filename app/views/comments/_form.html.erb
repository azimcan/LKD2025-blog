<%= form_with model: [ post, comment ], class: "flex flex-col gap-4" do |form| %>
  <%= render "form_errors", record: form.object %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, placeholder: true, class: "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium cursor-pointer" %>
<% end %>
